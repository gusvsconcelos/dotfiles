// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette (cmd-shift-p / ctrl-shift-p)
{
  "hard_tabs": false,
  "cursor_shape": "bar",
  "restore_on_startup": "launchpad",
  "auto_update_extensions": {
    "catppuccin-blur": false
  },
  "vim": {
    "toggle_relative_line_numbers": true
  },
  "vim_mode": true,
  "centered_layout": {
    "left_padding": 0.2
  },
  "disable_ai": true,
  "outline_panel": {
    "button": true
  },
  "active_pane_modifiers": {
    "inactive_opacity": 1.0
  },
  "use_system_window_tabs": false,
  "bottom_dock_layout": "contained",
  "tabs": {
    "show_close_button": "hover",
    "close_position": "right",
    "show_diagnostics": "all",
    "file_icons": true,
    "git_status": true
  },
  "debugger": {
    "button": true
  },
  "search": {
    "button": false
  },
  "terminal": {
    "cursor_shape": "block",
    "toolbar": {
      "breadcrumbs": false
    },
    "option_as_meta": false,
    "minimum_contrast": 45.0,
    "font_weight": 400.0,
    "font_size": 14.0,
    "dock": "bottom",
    "button": true
  },
  "status_bar": {
    "cursor_position_button": false,
    "active_encoding_button": "non_utf8",
    "active_language_button": true
  },
  "project_panel": {
    "auto_fold_dirs": false,
    "starts_open": true,
    "hide_hidden": false,
    "hide_root": false,
    "indent_guides": {
      "show": "always"
    },
    "auto_reveal_entries": true,
    "indent_size": 20.0,
    "git_status": true,
    "folder_icons": false,
    "hide_gitignore": false,
    "dock": "left",
    "default_width": 240.0,
    "file_icons": true,
    "entry_spacing": "comfortable",
    "button": true
  },
  "diagnostics": {
    "button": true,
    "inline": {
      "enabled": false
    }
  },
  "prettier": {
    "allowed": true
  },
  "enable_language_server": true,
  "colorize_brackets": false,
  "inlay_hints": {
    "show_parameter_hints": true,
    "show_type_hints": true,
    "show_value_hints": true,
    "enabled": false
  },
  "completions": {
    "words": "fallback"
  },
  "indent_guides": {
    "background_coloring": "disabled",
    "coloring": "fixed",
    "active_line_width": 1,
    "line_width": 1,
    "enabled": true
  },
  "soft_wrap": "none",
  "show_wrap_guides": true,
  "tab_size": 2,
  "toolbar": {
    "agent_review": false,
    "code_actions": false,
    "selections_menu": true,
    "quick_actions": false,
    "breadcrumbs": false
  },
  "minimap": {
    "max_width_columns": 80,
    "current_line_highlight": "all",
    "thumb_border": "full",
    "thumb": "hover",
    "show": "never"
  },
  "scrollbar": {
    "axes": {
      "horizontal": false
    },
    "show": "never"
  },
  "inline_code_actions": true,
  "relative_line_numbers": "disabled",
  "gutter": {
    "min_line_number_digits": 0,
    "folds": true,
    "breakpoints": true,
    "runnables": true,
    "line_numbers": true
  },
  "scroll_beyond_last_line": "off",
  "which_key": {
    "enabled": true
  },
  "autosave": "on_window_change",
  "rounded_selection": true,
  "current_line_highlight": "all",
  "text_rendering_mode": "platform_default",
  "ui_font_weight": 400.0,
  "ui_font_family": "Fira Sans",
  "buffer_line_height": "comfortable",
  "buffer_font_weight": 400.0,
  "buffer_font_family": "JetBrainsMono Nerd Font",
  "icon_theme": {
    "mode": "system",
    "light": "Zed (Default)",
    "dark": "Zed (Default)"
  },
  "window_decorations": "server",
  "tab_bar": {
    "show_pinned_tabs_in_separate_row": false,
    "show_tab_bar_buttons": true,
    "show_nav_history_buttons": false,
    "show": true
  },
  "title_bar": {
    "show_user_picture": false,
    "show_menus": false,
    "show_user_menu": true,
    "show_sign_in": false,
    "show_onboarding_banner": false,
    "show_project_items": true,
    "show_branch_name": true,
    "show_branch_icon": true
  },
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  },
  "session": {
    "restore_unsaved_buffers": false,
    "trust_all_worktrees": true
  },
  "ui_font_size": 16.0,
  "buffer_font_size": 16.0,
  "theme": {
    "mode": "system",
    "light": "Base16 Tokyo Night Terminal Light",
    "dark": "Base16 Tokyo Night Terminal Dark"
  }
}
